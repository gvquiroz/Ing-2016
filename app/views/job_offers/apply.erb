<h1>Job Application</h1>
<DIV ALIGN=left><h5><%=@job_offer.title%> in <%=@job_offer.location%>
  <a href="#" onclick="change('ejemplo'); return false;">...</a><h5></DIV>

  <div id="ejemplo" style="display: none;">
    <h6>Title: <%=@job_offer.title%><br>
    Location: <%=@job_offer.location%><br>
    Description: <%=@job_offer.description%><br><h6>
  </div>

<h5>Please complete to apply for this offer</h5>
<br>
<% form_for(@job_application, "/job_offers/apply/#{@job_offer.id}") do |f| %>

<p>Full Name *</p>
<DIV ALIGN=left><%= f.text_field :first_name, placeholder: "First Name *" %>
                <%= f.text_field :last_name, placeholder: "Last Name *" %></DIV>


<%= f.label :applicant_email, :caption => "Email Address *"%>
<%= f.email_field :applicant_email, placeholder: "applicant@example.com", :class => 'long'%>

<p>Enter a Link to your CV or write a Short Bio</p>

<%= f.label :link_cv, :caption => "Link CV"%>
<%= f.url_field :link_cv, :class => 'long'%>
<br/>

<%= f.label :short_bio, :caption => "Short Bio" %>
<%= f.text_area :short_bio, placeholder: "Write your application covering message here", :class => "input-block-level" %>

<p>* Required fields</p>

<br/>
<%= f.submit "Apply", :class => "btn btn-primary" %>
<%= link_to 'Cancel', url_for(:job_offers, :latest), :class => "btn btn-secondary" %>
<% end %>
