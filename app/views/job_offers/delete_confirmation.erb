<h1>My Job Offers</h1>


<h5>Are you sure you want to delete this offer:</h5>

<% form_for(@job_offer, "/job_offers/delete_confirmation/#{@job_offer.id}") do |f| %>

Title: <%= @job_offer.title %><br>
Location: <%= @job_offer.location %><br>
Description: <%= @job_offer.description %><br>
Due date: <%= @job_offer.due_date %><br>

<br>

  <DIV ALIGN=left>
    <%- form_tag url(:job_offers, :delete_confirmation, :offer_id => @job_offer.id), :method => :delete, :style => 'display:inline' do %>
				<button type="submit" title="Delete offer" rel='tooltip' class="btn btn-primary" >Delete</button>
    <% end %>
    <%= link_to 'Cancel', url_for(:job_offers, :my), :class => "btn btn-secondary", :id => 'cancelButton' %>
  </DIV>

<% end %>
