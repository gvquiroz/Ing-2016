<h1>My Job Offers</h1>
<div class="table table-bordered">
<table class="sortable">
	<tr>
		<th>Title</th>
		<th>Location</th>
		<th>Description</th>
		<th WIDTH=35>Is active</th>
		<th WIDTH=74>Due Date</th>
		<th WIDTH=50>Number of applies</th>
		<th WIDTH=50>Number of candidates</th>
		<th class="sorttable_nosort">Actions</th>
	</tr>
	<% @offers.each do | offer| %>

	<tr>
		<td><%= offer.title %></td>
		<td><%= offer.location %></td>
		<td><%= offer.description %></td>
		<td><%= offer.is_active %></td>
		<td><%= offer.due_date %></td>
		<td><%= offer.applies %></td>
		<td><%= offer.candidates %></td>

		<td>
			<%= link_to 'Edit', url_for(:job_offers, :edit, :offer_id => offer.id), :title =>"Edit offer" ,:class => "btn btn-primary" %>
			<%= link_to 'Delete', url_for(:job_offers, :delete_confirmation, :offer_id => offer.id), :title =>"Confirm to Delete" ,:class => "btn btn-primary" %>
			<% if not offer.is_active %>
				<%- form_tag url(:job_offers, :activate, :offer_id => offer.id), :method => :put, :style => 'display:inline' do %>
	          <button type='submit' title="Activate for 30 days from now" rel='tooltip' class="btn btn-secondary" >Activate
	          </button>
	    	<% end %>
      <% end %>
			<% if offer.candidates > 0 %>
				<%= link_to 'Candidates', url_for(:job_offers, :candidates, :offer_id => offer.id), :title =>"Candidates list" ,:class => "btn btn-secondary" %>
			<% end %>
		</td>
	</tr>

  <% end %>

</table>
</div>
