<div class="search-box">
	<form method="POST" action="search" class="form-search">
		 <%= csrf_token_field %>
		<input type="text" name="q" />
		<input type="submit" value="search" id="search-button" class="btn btn-primary"/>
	</form>
</div>
<h1>Current Job Offers</h1>


<div class="table table-bordered">
<table class="sortable">
<thead>
	<tr>
		<th><font color="blue">Title</font></th>
		<th><font color="blue">Location</font></th>
		<th><font color="blue">Description</th>
		<th class="sorttable_nosort">Actions</th>
	</tr>
</thead>
<tbody>
	<% @offers.each do | offer| %>
	<tr>
		<td>
			<%= offer.title %>
		</td>
		<td>
			<%= offer.location %>
		</td>
		<td>
			<%= offer.description %>
		</td>
		<td>
			<%= link_to 'Apply', url_for(:job_offers, :apply, :offer_id => offer.id), :class => "btn btn-primary" %>
		</td>
	</tr>
  <% end %>
</tbody>

</table>
</div>
